#!/bin/bash
set -e

PLUGIN="iconic"
FILES=(main.js manifest.json styles.css)

VAULTS=(
	# "$HOME/OBSIDIAN VAULTS/My Vault"
)

for vault in "${VAULTS[@]}"; do
	dest="$vault/.obsidian/plugins/$PLUGIN"
	mkdir -p "$dest"
	for f in "${FILES[@]}"; do
		[ -f "$f" ] && cp "$f" "$dest/"
	done
	echo "Deployed to $dest"
done
